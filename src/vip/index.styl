@import '../components/logo/_logo.styl'
@import '../global.styl'

header
    padding 2em;

.copyright
    margin-top: 4em;

.close
    position: absolute
    right: 4em;
    top: 4em;

.vip-list
    display: block;
    display: flex;
    justify-content: space-around;
    margin: 5em;
    padding: 0;


    li
        width: 18em;
        padding: 1em 0
        border-radius: 5px;
        cursor: pointer;
        border: 2px solid #fff;
        background: #fff;
        margin: 0 1em
        h1
            color: priceColor
            font-weight: 100;
    li.active
    li:hover
        border: 2px solid mainColor;



